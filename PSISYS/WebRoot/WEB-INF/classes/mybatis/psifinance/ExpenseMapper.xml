<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ExpenseMapper">
	
	<!--表名 -->
	<sql id="tableName">
		psi_expense
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		EXPENSE_ID,                                       
		  LDATE,                                            
		  BILLCODE,                                         
		  BILLTYPE,                                         
		  BILLSTATUS,                                       
		  USER_ID,                                         
		  PAYMETHOD_ID,                                 
		  PAYORIGIN,                                        
		  TICKETNUM,                                        
		  PAYAMOUNT,                                        
		  NOTE,                                             
		  PK_SOBOOKS
	</sql>
	<!-- 字段值 -->
	<sql id="FieldValue">
		  #{EXPENSE_ID},                                                   
		  #{LDATE},                                                        
		  #{BILLCODE},                                                     
		  #{BILLTYPE},                                                     
		  #{BILLSTATUS},                                                   
		  #{USER_ID},                                                     
		  #{PAYMETHOD_ID},                                             
		  #{PAYORIGIN},                                                    
		  #{TICKETNUM},                                                    
		  #{PAYAMOUNT},                                                    
		  #{NOTE},                                                         
		  #{PK_SOBOOKS}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<update id="delete" parameterType="pd">
		update 
		<include refid="tableName"></include>
		set
			DR = 1 
		where 
			EXPENSE_ID = #{EXPENSE_ID}
			and PK_SOBOOKS = #{PK_SOBOOKS}
	</update>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
		  USER_ID=#{USER_ID},                                                     
		  PAYMETHOD_ID=#{PAYMETHOD_ID},                                             
		  PAYORIGIN=#{PAYORIGIN},                                                    
		  TICKETNUM=#{TICKETNUM},                                                    
		  PAYAMOUNT=#{PAYAMOUNT},                                                    
		  NOTE=#{NOTE},                                                         
		EXPENSE_ID = EXPENSE_ID
		where 
		EXPENSE_ID = #{EXPENSE_ID}
		and PK_SOBOOKS = #{PK_SOBOOKS}
		and IFNULL(DR,0)=0
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			EXPENSE_ID = #{EXPENSE_ID}
			and PK_SOBOOKS = #{PK_SOBOOKS}
			and IFNULL(DR,0)=0
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
			<include refid="Field"></include>
		from 
		<include refid="tableName"></include> 
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
					BILLCODE LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					NOTE LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				)
		</if>
		<if test="pd.lastStart!=null and pd.lastStart!=''">
			and CREATETIME &gt;= #{pd.lastStart} 
		</if>
		<if test="pd.lastEnd!=null and pd.lastEnd!=''">
			and CREATETIME &lt;= #{pd.lastEnd} 
		</if>
		<if test="pd.USER_ID!=null and pd.USER_ID!=''">
			and USER_ID = #{pd.USER_ID} 
		</if>
		and PK_SOBOOKS = #{pd.PK_SOBOOKS}
			and IFNULL(DR,0)=0 
		order by CREATETIME desc
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where
			1=1
		<if test="days!=null and days!=''"><!-- 几天内 -->
			and DATE_SUB(CURDATE(), INTERVAL ${days} DAY) &lt;= date(CREATETIME)
		</if>
			and PK_SOBOOKS = #{PK_SOBOOKS}
			and IFNULL(DR,0)=0 
	</select>
	
	<!-- 批量删除 -->
	<update id="deleteAll" parameterType="String">
		update 
		<include refid="tableName"></include>
		set 
			DR = 1
		where 
			EXPENSE_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
		   and PK_SOBOOKS = #{PK_SOBOOKS}
		   and IFNULL(DR,0)=0 
	</update>
	
	<select id="listAllToExcel" parameterType="pd" resultType="pd">
		select
			<include refid="Field"></include>
		from 
		<include refid="tableName"></include> 
		where  PK_SOBOOKS = #{PK_SOBOOKS}
			and IFNULL(DR,0)=0 
			<if test="lastStart!=null and lastStart!='' ">
					<if test="lastEnd!=null and lastEnd!='' ">
					 and Date(LASTTIME) BETWEEN #{lastStart} and #{lastEnd}
					</if>
			</if>
			<if test="flag==1">
				and date_format(CREATETIME,'%Y-%m')= date_format(now(),'%Y-%m')
			</if>
			order by CREATETIME desc
	</select>
</mapper>