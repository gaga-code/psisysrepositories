<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="PaymentMapper">
	
	<!--表名 -->
	<sql id="tableName">
		base_paymethod
	</sql>
	
	<!-- 字段 -->
	<sql id="FieldCha">	
		PAYMETHOD_ID,	
		PAYMETHODNAME,	
		USER_ID,
		NOTE
	</sql>
	<!-- 字段 -->
	<sql id="FieldAdd">	
		PAYMETHOD_ID,	
		PAYMETHODNAME,	
		USER_ID,
		NOTE,
		PK_SOBOOKS,
		CRATETIME
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValueAdd">
		#{PAYMETHOD_ID},	
		#{PAYMETHODNAME},	
		#{USER_ID},	
		#{NOTE},
		#{PK_SOBOOKS},
		#{CRATETIME}
	</sql>
		<!-- 字段值 -->
	<sql id="FieldValue2">
		#{PAYMETHOD_ID},	
		#{PAYMETHODNAME},	
		#{USER_ID},	
		#{NOTE},
		#{PK_SOBOOKS},
		#{CRATETIME}
	</sql>
		<!-- 字段值 -->
	<sql id="FieldValue3">
		#{PAYMETHOD_ID},	
		#{PAYMETHODNAME},	
		#{USER_ID},	
		#{NOTE},
		#{PK_SOBOOKS},
		#{CRATETIME}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="FieldAdd"></include>
		) values (
	<include refid="FieldValueAdd"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			PAYMETHOD_ID = #{PAYMETHOD_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			PAYMETHODNAME = #{PAYMETHODNAME},
			NOTE = #{NOTE},
			USER_ID = #{USER_ID},
			LASTTIME = #{LASTTIME}
		where 
		PAYMETHOD_ID = #{PAYMETHOD_ID}	
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="FieldCha"></include>
		from 
		<include refid="tableName"></include>
		where 
			PAYMETHOD_ID = #{PAYMETHOD_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="FieldCha"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
		and
			(
				PAYMETHODNAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
			)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="FieldCha"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			PAYMETHOD_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
</mapper>