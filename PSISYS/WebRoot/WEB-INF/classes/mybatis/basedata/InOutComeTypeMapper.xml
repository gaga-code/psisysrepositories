<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="InOutComeTypeMapper">
	
	<!--表名 -->
	<sql id="tableName">
		base_inoutcometype
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		TYPECODE,	
		TYPENAME,	
		USER_ID,
		NOTE,	
		INOUTCOMETYPE_ID,
 		PK_SOBOOKS
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{TYPECODE},	
		#{TYPENAME},	
		#{USER_ID},	
		#{NOTE},	
		#{INOUTCOMETYPE_ID},
 		#{PK_SOBOOKS}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
		<!-- 删除-->
	<update id="delete" parameterType="pd">
		update 
		<include refid="tableName"></include>
		set
			DR = 1 
		where 
			INOUTCOMETYPE_ID = #{INOUTCOMETYPE_ID}
			and PK_SOBOOKS = #{PK_SOBOOKS}
			and IFNULL(dr,0)=0 
	</update>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			TYPENAME = #{TYPENAME},
			USER_ID = #{USER_ID},
			NOTE = #{NOTE},
		INOUTCOMETYPE_ID = INOUTCOMETYPE_ID
		where 
		INOUTCOMETYPE_ID = #{INOUTCOMETYPE_ID}
		and PK_SOBOOKS = #{PK_SOBOOKS}
		and IFNULL(dr,0)=0 
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			INOUTCOMETYPE_ID = #{INOUTCOMETYPE_ID}
			and PK_SOBOOKS = #{PK_SOBOOKS}
			and IFNULL(dr,0)=0 
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
		and
			(
				TYPENAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				 or 
				TYPECODE LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
			)
				
		</if>
			and PK_SOBOOKS = #{pd.PK_SOBOOKS}
			and IFNULL(dr,0)=0 
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where
			PK_SOBOOKS = #{PK_SOBOOKS}
			and IFNULL(dr,0)=0 
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			INOUTCOMETYPE_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
</mapper>